<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.des.butler.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:textSize="30sp"
        android:textColor="#84C1FF"
        android:text="  Butler  " />

    <Button
        android:id="@+id/cale_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:background="#84C1FF"
        android:textColor="#FAF4FF"
        android:text="  日历视图  " />

    <TextView
        android:id="@+id/show_developer_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="开发者模式" />

    <TextView
        android:id="@+id/out_put"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_developer_state"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="调试输出" />

    <TextView
        android:id="@+id/show_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cale_butt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:textColor="#84C1FF"
        android:text="未登录" />

    <ImageButton
        android:id="@+id/main_add"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:src="@drawable/add" />

</RelativeLayout>