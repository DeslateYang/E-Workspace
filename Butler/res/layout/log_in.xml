<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/login_background" />

    <Button
        android:id="@+id/sign_up_butt"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_below="@+id/log_in_butt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="#FAF4FF"
        android:text="  注册为新账号  " />

    <Button
        android:id="@+id/log_in_butt"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_below="@+id/get_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:background="#FAF4FF"
        android:text="登录" />

    <EditText
        android:id="@+id/get_username"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:background="#FAF4FF"
        android:ems="10" />

    <EditText
        android:id="@+id/get_password"
        android:layout_width="200dip"
        android:layout_height="40dip"
        android:layout_below="@+id/get_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="#FAF4FF"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/head_portrait"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="#00000000"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>
